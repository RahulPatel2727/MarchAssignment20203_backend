<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <title>Document</title>
</head>
<body>
  <div class="container">
    <h1 style="text-align: center;background-color: yellow;">Medium Clone App</h1>
    <h5 style="text-align: center;background-color: yellow;">Discover Story Articles and reasearch work</h5>
    <hr>
    <a href="/articles/new" class="btn btn-primary mb-3">New Article</a>
    <div class="row">
      <% articles.forEach(article => { %>
        <div class="col-md-4">
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= article.title %></h5>
              <span class="card-text"><%= article.createdAt %></span>
              <p class="card-text"><%= article.content.substring(0, 100) %>...</p>
              <a href="/articles/<%= article.id %>" class="btn btn-primary">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
